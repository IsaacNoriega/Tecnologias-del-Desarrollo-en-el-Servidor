<h2>Mi info</h2>
{{#each data}} 
    <div class="card">
        <div class="card-body">
            <div class="card-info">
                    <a href={{url}} target="_blank" style="text-decoration: none; color:black;"><h1>{{title}}</h1></a>
            </div>
            <div class="card-img">
                <img src={{urlToImage}} alt="" style="width: 500px; height : 500px ;">
            </div>        </div>
    </div>
{{/each}}

<style>
    /* Estilos para el título "Mi info" */
h2 {
  font-size: 24px;
  margin-bottom: 20px;
}

/* Estilos para cada tarjeta de noticia */
.card {
  border: 1px solid #ccc;
  border-radius: 8px;
  margin-bottom: 20px;
  overflow: hidden;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

/* Estilos para el cuerpo de la tarjeta */
.card-body {
  padding: 20px;
}

/* Estilos para el contenedor de la información */
.card-info {
  margin-bottom: 10px;
}

/* Estilos para el título de la noticia */
.card-info h1 {
  font-size: 20px;
  margin: 0;
}

/* Estilos para el enlace del título */
.card-info h1 a {
  text-decoration: none;
  color: black;
}

.card-info h1 a:hover {
  color: #007bff;
}

/* Estilos para la imagen de la noticia */
.card-img img {
  width: 100%;
  height: auto;
  border-radius: 8px;
}
</style>